<!-- Pagefind Search Box -->
<div id="search-container" style="margin: 20px 0; padding: 15px; background: #f5f5dc; border-radius: 8px; border: 1px solid var(--border-color);">
  <link rel="stylesheet" href="/_pagefind/pagefind-ui.css">
  <div id="search"></div>
  <script defer src="/_pagefind/pagefind-ui.js"></script>
  <script>
    function initPagefind() {
      if (typeof PagefindUI !== 'undefined') {
        new PagefindUI({ 
          element: "#search",
          baseUrl: "/",
          showEmptyFilters: false,
          highlightParam: "highlight"
        });
      } else {
        setTimeout(initPagefind, 100);
      }
    }
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initPagefind);
    } else {
      initPagefind();
    }
  </script>
</div>
