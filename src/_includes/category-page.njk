{% extends "base.njk" %}

{% block content %}
  <div class="text-main category-listing">
    {# כותרת הדף, למשל: "כתבים ממקור סלאבי" #}
    <h1>{{ title }}</h1>

    {# פסקת תיאור קצרה (אופציונלי, נוסיף בעתיד) #}
    {% if description %}
      <p class="category-description">{{ description }}</p>
    {% endif %}

    {# רשימת הספרים בקטגוריה #}
    <div class="book-list">
      {# הלולאה עוברת על כל הפריטים ש-Eleventy יספק לדף הזה #}
      {% for item in items %}
        <div class="book-card">
          <h3><a href="{{ item.url | url }}">{{ item.data.title }}</a></h3>
          {% if item.data.description %}
            <p>{{ item.data.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
