---
layout: false
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {# Homepage #}
  <url>
    <loc>https://heb-sources.netlify.app/</loc>
    <priority>1.0</priority>
    <changefreq>monthly</changefreq>
  </url>
  
  {# Main navigation pages #}
  <url>
    <loc>https://heb-sources.netlify.app/texts/</loc>
    <priority>0.9</priority>
    <changefreq>weekly</changefreq>
  </url>
  <url>
    <loc>https://heb-sources.netlify.app/by-figure/</loc>
    <priority>0.9</priority>
    <changefreq>weekly</changefreq>
  </url>
  
  {# All text pages #}
  {% for item in collections.all %}
    {% if item.data.tags and item.data.tags.includes("texts") %}
    <url>
      <loc>https://heb-sources.netlify.app{{ item.url }}</loc>
      <priority>{% if item.data.pageNumber == 0 %}0.8{% else %}0.7{% endif %}</priority>
      <changefreq>monthly</changefreq>
    </url>
    {% endif %}
  {% endfor %}
</urlset>
